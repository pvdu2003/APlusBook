<% if(typeof title === "undefined") title ="" %>
<ul class="list-group list-group-flush mb-5">
  <div
    class="d-flex flex-row justify-content-between align-items-center"
    data-bs-toggle="collapse"
    data-bs-target="#price"
    aria-expanded="false"
    aria-controls="price"
  >
    <h5>Price</h5>
    <i class="fas fa-chevron-down p-2"></i>
  </div>
  <div class="collapse" id="price">
    <li class="list-group-item">
      <a
        class="text-decoration-none text-dark px-3"
        href="/book/list?page=<%= currentPage %>&from=1&to=30&title=<%= title %>"
        ><30$</a
      >
    </li>
    <li class="list-group-item">
      <a
        class="text-decoration-none text-dark px-3"
        href="/book/list?page=<%= currentPage %>&from=30&to=60&title=<%= title %>"
        >30-60$</a
      >
    </li>
    <li class="list-group-item">
      <a
        class="text-decoration-none text-dark px-3"
        href="/book/list?page=<%= currentPage %>&from=60&to=99&title=<%= title %>"
        >>60$</a
      >
    </li>
  </div>
  <div
    class="d-flex flex-row justify-content-between align-items-center"
    data-bs-toggle="collapse"
    data-bs-target="#category"
    aria-expanded="false"
    aria-controls="category"
  >
    <h5>Category</h5>
    <i class="fas fa-chevron-down p-2"></i>
  </div>
  <div class="collapse" id="category">
    <li class="list-group-item">
      <a class="dropdown-item" href="/book/list"> All Categories </a>
    </li>
    <% categories.forEach(function(cat) { %> <% if (category && cat.id ==
    category.id) { %>
    <li class="list-group-item text-main">
      <a class="dropdown-item fw-medium" href="/category/<%=cat.id%>"
        ><%=cat.name%></a
      >
    </li>
    <% } else { %>
    <li class="list-group-item">
      <a class="dropdown-item" href="/category/<%=cat.id%>"><%=cat.name%></a>
    </li>
    <% }}); %>
  </div>
</ul>
