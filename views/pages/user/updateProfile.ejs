<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Update Profile</title>
    <%- include('../../partials/main') %>
  </head>
  <% if (typeof err === 'undefined') err = {}; %>
  <body>
    <%- include('../../partials/header') %>
    <div class="container text-center px-5">
      <div class="row align-items-start mt-5">
        <%- include('../../partials/userNav') %>

        <div class="col-8 text-start ms-5">
          <h4 class="text-center fw-bold">UPDATE ACCOUNT</h4>
          <form
            class="container-sm py-4 rounded row g-2"
            style="max-width: 720px"
            action="/user/update?_method=PATCH"
            method="post"
          >
            <div class="col-md-6">
              <label for="name" class="form-label">Full Name</label>
              <input
                type="text"
                class="form-control"
                id="name"
                value="<%= usr.name %>"
                readonly
              />
            </div>
            <div class="col-md-6">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="username"
                value="<%= usr.username %>"
                readonly
              />
            </div>
            <div class="col-md-6">
              <label for="email" class="form-label">Email</label>
              <input
                type="email"
                class="form-control"
                id="email"
                name="email"
                value="<%= usr.email %>"
              />
              <% if(!usr.dob && !err.dob) {%>
              <p class="text-danger fst-italic err-msg"><%= err.email %></p>
              <% } %>
            </div>

            <div class="col-md-6">
              <label for="dob" class="form-label">Date of birth</label>
              <input
                type="date"
                class="form-control"
                id="dob"
                name="dob"
                value="<%= usr.dob ? usr.dob.toISOString().slice(0, 10) : '' %>"
              />
              <% if(!usr.dob && !err.dob) {%>
              <p class="text-danger fst-italic err-msg">
                You did not provide date of birth information before!
              </p>
              <%} %>
              <p class="text-danger fst-italic err-msg"><%= err.dob %></p>
            </div>
            <div class="col-md-6">
              <label for="phone_num" class="form-label">Phone Number</label>
              <input
                type="tel"
                class="form-control"
                id="phone_num"
                name="phone_num"
                value="<%= usr.phone_num %>"
              />
              <% if(!usr.phone_num && !err.phone_num) {%>
              <p class="text-danger fst-italic err-msg">
                You did not provide phone number information before!
              </p>
              <%} %>
              <p class="text-danger fst-italic err-msg"><%= err.phone_num %></p>
            </div>
            <div class="col-md-6">
              <label for="address" class="form-label">Address</label>
              <input
                type="text"
                class="form-control"
                id="address"
                name="address"
                value="<%= usr.address %>"
              />
              <% if(!usr.address && !err.address) {%>
              <p class="text-danger fst-italic err-msg">
                You did not provide address information before!
              </p>
              <%} %>
              <p class="text-danger fst-italic err-msg"><%= err.address %></p>
            </div>
            <div class="d-flex flex-row justify-content-end">
              <button type="submit" class="btn bg-main mt-3 me-2 text-light">
                Update
              </button>
              <a href="/user/profile" class="btn btn-secondary mt-3 text-light">
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </body>
</html>
