<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Login Form</title>
    <%- include('../../partials/main') %>
  </head>
  <% if (typeof err === 'undefined') err = {}; %>
  <body>
    <%- include('../../partials/header') %>
    <form
      class="container-sm bg-main-lighter my-5 px-5 py-4 rounded"
      style="max-width: 720px"
      action="/auth/register"
      method="post"
      th:object="${user}"
    >
      <h3 class="text-center mb-3">Welcome to My Website</h3>
      <div class="mb-2">
        <label for="userName" class="form-label">Username</label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="Please enter your username"
          required
        />
        <p class="text-danger fst-italic err-msg"><%= err.username %></p>
      </div>
      <div class="mb-2">
        <label for="name" class="form-label">Full name</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="Please enter your name"
          required
        />
        <p class="text-danger fst-italic err-msg"><%= err.name %></p>
      </div>
      <div class="mb-2">
        <label for="password" class="form-label">Password</label>
        <input
          type="password"
          class="form-control"
          id="password"
          name="password"
          placeholder="Please enter your password"
          required
        />
        <p class="text-danger fst-italic err-msg"><%= err.password %></p>
      </div>
      <div class="mb-2">
        <label for="confirmPw" class="form-label">Confirm password</label>
        <input
          type="password"
          class="form-control"
          id="confirmPw"
          name="confirmPw"
          placeholder="Please enter your password again"
          required
        />
        <p class="text-danger fst-italic err-msg"><%= err.confirmPw %></p>
      </div>
      <div class="mb-2">
        <label for="phoneNum" class="form-label">Phone number</label>
        <input
          type="tel"
          class="form-control"
          id="phoneNum"
          name="phoneNum"
          placeholder="Please enter your phone number"
          required
        />
        <p class="text-danger fst-italic err-msg"><%= err.phoneNum %></p>
      </div>
      <div class="mb-2">
        <label for="email" class="form-label">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="Please enter your email"
          required
        />
        <p class="text-danger fst-italic err-msg"><%= err.email %></p>
      </div>
      <button type="submit" class="btn bg-main mt-3 text-light col-12">
        Sign up
      </button>
      <hr />
      <p class="text-center">
        You already have an account? <br />
        Please login by clicking <a href="/auth/login">here</a>.
      </p>
    </form>
  </body>
</html>
