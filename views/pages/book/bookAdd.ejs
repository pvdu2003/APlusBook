<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Add Book</title>
    <%- include('../../partials/main') %>
  </head>
  <% if (typeof err === 'undefined') err = {}; %> <% if (typeof invalid ===
  'undefined') invalid = {}; %>
  <body>
    <%- include('../../partials/header') %>
    <div class="container text-center px-5">
      <div class="row align-items-start my-5">
        <%- include('../../partials/userNav') %>

        <div class="col-8 text-start ms-5">
          <h4 class="text-center fw-bold">ADD BOOK</h4>
          <form
            class="container-sm py-4 rounded row g-2"
            style="max-width: 720px"
            action="/book/add"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="col-md-6">
              <label for="title" class="form-label">Title</label>
              <input
                type="text"
                class="form-control"
                id="title"
                name="title"
                placeholder="Enter book's title"
                value="<%= invalid.title %>"
                required
              />
            </div>
            <div class="col-md-6">
              <label for="author" class="form-label">Author</label>
              <input
                type="text"
                class="form-control"
                id="author"
                name="author"
                placeholder="Enter book's author(s)"
                value="<%= invalid.author %>"
                required
              />
            </div>
            <div class="col-md-12">
              <label for="description" class="form-label">Description</label>
              <textarea
                class="form-control"
                rows="3"
                id="description"
                name="description"
                placeholder="Enter book's description"
                required
              >
                <%= invalid.description %>
              </textarea>
              <p class="text-danger fst-italic err-msg">
                <%= err.description %>
              </p>
            </div>
            <div class="col-md-6">
              <label for="isbn" class="form-label">ISBN</label>
              <input
                type="text"
                class="form-control"
                id="isbn"
                name="isbn"
                placeholder="Enter ISBN number"
                value="<%= invalid.isbn %>"
                required
              />
              <p class="text-danger fst-italic err-msg"><%= err.isbn %></p>
            </div>
            <div class="col-md-6">
              <label for="published_date" class="form-label"
                >Published Date</label
              >
              <input
                type="date"
                class="form-control"
                id="published_date"
                name="published_date"
                value="<%= invalid.published_date %>"
                required
              />
              <p class="text-danger fst-italic err-msg">
                <%= err.published_date %>
              </p>
            </div>
            <div class="col-md-6">
              <label for="publisher" class="form-label">Publisher</label>
              <input
                type="text"
                class="form-control"
                id="publisher"
                name="publisher"
                placeholder="Enter book's publisher"
                value="<%= invalid.publisher %>"
                required
              />
              <p class="text-danger fst-italic err-msg"><%= err.publisher %></p>
            </div>
            <div class="col-md-6">
              <label for="price" class="form-label">Price</label>
              <input
                type="number"
                min="0"
                step="0.1"
                class="form-control"
                id="price"
                name="price"
                placeholder="Enter book's price"
                value="<%= invalid.price %>"
                required
              />
              <p class="text-danger fst-italic err-msg"><%= err.price %></p>
            </div>
            <div class="col-md-6">
              <label for="quantity_import" class="form-label"
                >Quantity imported</label
              >
              <input
                type="number"
                min="0"
                class="form-control"
                id="quantity_import"
                name="quantity_import"
                placeholder="Enter book's quantity imported"
                value="<%= invalid.quantity_import %>"
                required
              />
              <p class="text-danger fst-italic err-msg">
                <%= err.quantity_import %>
              </p>
            </div>
            <div class="col-md-6">
              <label for="quantity_sold" class="form-label">Category</label>
              <select class="form-select" id="cat_id" name="cat_id" required>
                <% categories.forEach(cat => {%>
                <option value="<%= cat._id %>"><%= cat.name %></option>
                <%}) %>
              </select>
            </div>
            <div class="col-md-12">
              <label for="image" class="form-label">Image</label>
              <input
                type="file"
                accept="image/*"
                class="form-control"
                id="image"
                name="image"
                required
              />
              <p class="text-danger fst-italic err-msg"><%= err.image %></p>
            </div>
            <div class="d-flex flex-row justify-content-end">
              <button type="submit" class="btn bg-main mt-3 me-2 text-light">
                Update
              </button>
              <a href="/book/manage" class="btn btn-secondary mt-3 text-light">
                Cancel
              </a>
            </div>
          </form>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </body>
</html>
