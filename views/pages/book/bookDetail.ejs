<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Login Form</title>
    <%- include('../../partials/main') %>
  </head>
  <% if (typeof err === 'undefined') err = {}; %>
  <body>
    <%- include('../../partials/header') %>
    <div class="container text-center d-flex flex-row mt-4">
      <div class="col-7">
        <div class="row">
          <div class="col-5 py-3 border">
            <img
              src="<%= book.image%>"
              alt="Book image"
              class="card-img-top"
              alt="Image book detail"
            />
          </div>
          <div class="col-7 pt-4 px-4">
            <div>
              <h5><%= book.title%></h5>
              <div class="d-flex align-items-end">
                <h5 class="text-main" style="width: 8rem">
                  <%= book.price%> $
                </h5>
              </div>
              <div class="my-4">
                <h6 class="d-block">
                  Quantity:
                  <input
                    class="text-center"
                    type="number"
                    value="1"
                    min="0"
                    max="20"
                    step="1"
                  />
                </h6>
              </div>
              <div class="py-2">
                <a
                  class="btn btn-success"
                  style="width: 10rem"
                  href="/cart/checkout"
                  >Buy Now</a
                >
                <a
                  class="btn btn-primary"
                  style="width: 10rem; background-color: white; color: #07689f"
                  href="/my-cart"
                  >Add to cart</a
                >
              </div>

              <div class="mt-3">
                <h6>Sold: <%= book.quantity_sold%></h6>
                <h6>Stock: <%= book.quantity_in_stock%></h6>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col border ms-2">
        <div class="py-4 px-4" style="height: 300px">
          <h6>Book Description</h6>
          <p><%=book.description %></p>
        </div>
      </div>
    </div>
    <%- include('../../partials/footer') %>
  </body>
</html>
